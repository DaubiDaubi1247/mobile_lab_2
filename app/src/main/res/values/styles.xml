<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="container">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="title_card.white_text">
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="title_card.bg">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>


    <style name="title_card.white_text.btn">
        <item name="backgroundTint">@color/grey</item>
        <item name="android:radius">16dp</item>
    </style>

    <style name="Widget.Theme.Lab1.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>


</resources>